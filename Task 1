#include <stdio.h>
#include <string.h>

void display_prompt();

int main(){

//prompting user and storing input 
char input[512];

printf("please enter an input: ");
fgets(input, 512, stdin);
  input[strcspn(input, "\n")] = 0;
    
// Parsing the input, for example, splitting it by spaces
char *token = strtok(input, " \t|><&;");
while (token != NULL) {
    printf("%s\n", token);
    token = strtok(NULL, " \t|><&;");
  }
return 0;

//Continuous reading and processing
strcmp("exit","\t|><&");

   
int num = 0; 
printf("- ");
while (num != EOF) {
    num = scanf(" %s", &s);
    printf("- ");
  }
  return 0;
}
